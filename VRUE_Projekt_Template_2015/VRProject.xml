<sensor>
	<tracker>Microsoft</tracker>
	<mirrormode>true</mirrormode>
	<smoothing>true</smoothing>
	<smoothingfactor>0.5</smoothingfactor>
	<correction>0.5</correction>
	<prediction>0.5</prediction>
	<jitter>0.05</jitter>
	<deviation>0.04</deviation>
</sensor>
<server>
	<transformations>Global coordinates</transformations>
	<automaticassignment>true</automaticassignment>
</server>
<gestures>
	<gesture name="Gesture 1" timeout="0">
		<input type="0">
			<descriptor>lean</descriptor>
			<descriptor>forward</descriptor>
			<descriptor>at least</descriptor>
			<descriptor>20</descriptor>
			<descriptor>degrees</descriptor>
		</input>
		<output type="0">
			<descriptor>press</descriptor>
			<descriptor>w</descriptor>
			<descriptor>for</descriptor>
			<descriptor>0</descriptor>
		</output>
	</gesture>
	<gesture name="ActivateInstrument" timeout="0">
		<input type="0">
			<descriptor>jump</descriptor>
			<descriptor/>
			<descriptor>at least</descriptor>
			<descriptor>5</descriptor>
			<descriptor>centimeters</descriptor>
		</input>
		<output type="0">
			<descriptor>press</descriptor>
			<descriptor>e</descriptor>
			<descriptor>for</descriptor>
			<descriptor>0</descriptor>
		</output>
	</gesture>
	<gesture name="SelectInstrument" timeout="0.3">
		<input type="0">
			<descriptor>turn</descriptor>
			<descriptor>left</descriptor>
			<descriptor>at least</descriptor>
			<descriptor>20</descriptor>
			<descriptor>degrees</descriptor>
		</input>
		<output type="0">
			<descriptor>press</descriptor>
			<descriptor>r</descriptor>
			<descriptor>for</descriptor>
			<descriptor>0</descriptor>
		</output>
	</gesture>
	<gesture name="Spielen" timeout="0">
		<input type="1">
			<descriptor>right wrist</descriptor>
			<descriptor>to the right of</descriptor>
			<descriptor>torso</descriptor>
			<descriptor>at least</descriptor>
			<descriptor>2</descriptor>
			<descriptor>centimeters</descriptor>
		</input>
		<input type="4">
			<descriptor>0</descriptor>
			<descriptor>1</descriptor>
			<descriptor>starts</descriptor>
		</input>
		<input type="1">
			<descriptor>right wrist</descriptor>
			<descriptor>to the left of</descriptor>
			<descriptor>torso</descriptor>
			<descriptor>at least</descriptor>
			<descriptor>2</descriptor>
			<descriptor>centimeters</descriptor>
		</input>
		<output type="0">
			<descriptor>press</descriptor>
			<descriptor>t</descriptor>
			<descriptor>for</descriptor>
			<descriptor>0</descriptor>
		</output>
	</gesture>
</gestures>

